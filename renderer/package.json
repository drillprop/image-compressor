{
  "name": "renderer",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.3",
    "slash": "^3.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "autoprefixer": "^9.8.5",
    "cross-env": "^7.0.2",
    "electron": "^9.1.2",
    "electron-builder": "^22.8.0",
    "electron-reload": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "tailwindcss": "^1.6.0",
    "typescript": "~3.7.2",
    "wait-on": "^5.1.0",
    "watch": "^1.0.2"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "react-prebuild": "cross-env cp ../main/src/*.js public/",
    "electron-build": "electron-builder",
    "release": "run-s react-prebuild react-build electron-builder --publish=always",
    "build": "run-s build:css react-prebuild react-build electron-build",
    "start": "cross-env BROWSER=none npm-run-all build:css --parallel watch:css react-start",
    "watch:css": "postcss -w src/assets/tailwind.css -o src/assets/tailwind.output.css",
    "build:css": "postcss src/assets/tailwind.css -o src/assets/tailwind.output.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
